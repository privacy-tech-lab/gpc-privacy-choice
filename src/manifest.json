{
  "name": "GPC Privacy Choice",
  "version": "1.0",
  "description": "A research browser extension studying the possiblity of attaining usable active privacy choice mechanism",
  "manifest_version": 3,
  "icons" : {
    "32": "./img/gpc-choice-icon.png"
  }, 
  "permissions": [
    "webRequest",
    "declarativeNetRequest",
    "webNavigation",
    "storage",
    "activeTab",
    "cookies",
    "tabs",
    "contentSettings",
    "geolocation",
    "scripting"
  ],
  "host_permissions": [
    "http://*/*","https://*/*"
  ],
  "action": {
    "default_title": "GPC Privacy Choice"
  },
  "options_page": "options.html",
  "options_ui": {
    "page": "options/options.html",
    "open_in_tab": true
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["browserHistory.js"],
      "run_at": "document_start"
    },
    {
      "matches": ["<all_urls>"],
      "js": ["contentScript.js"],
      "run_at": "document_end"
    }
  ],
  "web_accessible_resources": [{
    "resources": ["adDomains.txt", "json/*.json"], 
    "matches": ["<all_urls>"]
  }],
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self'"
  }
}
